ssh:
    user: "core"
    port: ${ssh_port}
    privateKey: |
        ${indent(8, trimspace(ssh_private_key))}
caCertificate: |
    ${indent(4, trimspace(peer_ca))}
members:
%{ for index, ip in peer_ips ~}
    ${peer_names[index]}:
        peerCertificate: |
            ${indent(12, trimspace(peer_certs[index]))}
        peerKey: |
            ${indent(12, trimspace(peer_keys[index]))}
        serverCertificate: |
            ${indent(12, trimspace(server_certs[index]))}
        serverKey: |
            ${indent(12, trimspace(server_keys[index]))}
        host:
            ssh:
                address: "${peer_ssh_addresses[index]}"
        peerAddress: ${peer_ips[index]}
        serverAddress: ${server_ips[index]}
%{ endfor ~}
